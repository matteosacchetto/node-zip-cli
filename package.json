{
  "name": "node-zip-cli",
  "version": "0.2.2",
  "description": "Simple NodeJS CLI which allows you to create a ZIP file with support for .gitignore files",
  "main": "dist/app.mjs",
  "bin": "dist/app.mjs",
  "type": "module",
  "scripts": {
    "lint": "npx tsc --noemit && npx eslint src test",
    "dev": "npx rollup -c -w",
    "prebuild": "rm -rf dist",
    "build": "npx rollup -c",
    "pretest": "npm run lint",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepack": "npm run build",
    "doc": "npx typedoc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matteosacchetto/node-zip-cli.git"
  },
  "homepage": "https://github.com/matteosacchetto/node-zip-cli#README.md",
  "bugs": {
    "url": "https://github.com/matteosacchetto/node-zip-cli/issues"
  },
  "author": "Matteo Sacchetto",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "cli",
    "zip"
  ],
  "devDependencies": {
    "@rollup/plugin-eslint": "^9.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-run": "^3.0.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/parse-gitignore": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "esbuild": "^0.17.17",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rollup": "^3.20.4",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-node-externals": "^5.1.2",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.4",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16.15",
    "npm": ">=8.5.5"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^10.0.3",
    "chalk": "^5.2.0",
    "commander": "^10.0.1",
    "figures": "^5.0.0",
    "ignore": "^5.2.4",
    "inquirer": "^9.1.5",
    "jszip": "^3.10.1",
    "ora": "^6.3.0",
    "parse-gitignore": "^2.0.0",
    "valid-filename": "^4.0.0"
  }
}
