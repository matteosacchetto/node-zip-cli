{
  "name": "node-zip-cli",
  "version": "0.1.0",
  "description": " Simple NodeJS CLI which allows you to create a ZIP file with support for .gitignore files",
  "main": "dist/src/app.mjs",
  "bin": "dist/src/app.mjs",
  "type": "module",
  "scripts": {
    "lint": "npx tsc --noemit && npx eslint src test",
    "dev": "npx rollup -c -w",
    "prebuild": "rm -rf dist",
    "build": "npx rollup -c",
    "pretest": "npm run lint",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepack": "npm run build",
    "doc": "npx typedoc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matteosacchetto/node-zip-cli.git"
  },
  "homepage": "https://github.com/matteosacchetto/node-zip-cli#README.md",
  "bugs": {
    "url": "https://github.com/matteosacchetto/node-zip-cli/issues"
  },
  "author": "Matteo Sacchetto",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "cli",
    "zip"
  ],
  "devDependencies": {
    "@rollup/plugin-eslint": "^8.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-run": "^2.1.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^28.1.0",
    "@types/node": "^17.0.39",
    "@types/parse-gitignore": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "rollup": "^2.75.5",
    "ts-jest": "^28.0.4",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=16.15",
    "npm": ">=8.5.5"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "commander": "^9.3.0",
    "figures": "^4.0.1",
    "ignore": "^5.2.0",
    "inquirer": "^9.0.0",
    "jszip": "^3.10.0",
    "ora": "^6.1.2",
    "parse-gitignore": "^2.0.0",
    "valid-filename": "^4.0.0"
  }
}
