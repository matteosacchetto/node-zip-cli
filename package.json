{
  "name": "node-zip-cli",
  "version": "0.3.0",
  "description": "Simple NodeJS CLI which allows you to create a ZIP file with support for .gitignore files",
  "main": "dist/app.mjs",
  "bin": "dist/app.mjs",
  "type": "module",
  "scripts": {
    "lint": "npx tsc --pretty --incremental --noEmit && npx eslint --cache src test",
    "style-check": "prettier --cache -c src/ test/",
    "style-fix": "prettier --cache -w src/ test/",
    "dev": "npx rollup -c -w",
    "prebuild": "rm -rf dist",
    "build": "tsc --pretty --incremental --noEmit && rollup -c --environment NODE_ENV:production",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:debug": "rollup -c --environment NODE_ENV:debug",
    "pretap": "npx tap build",
    "tap": "tap --node-arg='--no-warnings' --node-arg='--loader=tsx/esm' --disable-coverage --allow-empty-coverage",
    "pretest": "npm run lint && npx tap build",
    "test": "c8 -c .c8rc.json tap --node-arg='--no-warnings' --node-arg='--loader=tsx/esm' --disable-coverage --allow-empty-coverage test/*.test.ts test/**/*.test.ts",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matteosacchetto/node-zip-cli.git"
  },
  "homepage": "https://github.com/matteosacchetto/node-zip-cli#README.md",
  "bugs": {
    "url": "https://github.com/matteosacchetto/node-zip-cli/issues"
  },
  "author": "Matteo Sacchetto",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "cli",
    "zip"
  ],
  "devDependencies": {
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-run": "^3.0.2",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.0",
    "@types/parse-gitignore": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "c8": "^8.0.1",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "rollup": "^4.6.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-node-externals": "^6.1.2",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "tap": "^18.6.1",
    "tsx": "^4.5.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.6.5"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^11.1.0",
    "@inquirer/confirm": "^2.0.15",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figures": "^6.0.1",
    "ignore": "^5.3.0",
    "jszip": "^3.10.1",
    "ora": "^7.0.1",
    "parse-gitignore": "^2.0.0",
    "valid-filename": "^4.0.0"
  },
  "tap": {
    "plugin": [
      "!@tapjs/typescript"
    ]
  }
}
