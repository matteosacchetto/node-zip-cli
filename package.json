{
  "name": "node-zip-cli",
  "version": "0.2.5",
  "description": "Simple NodeJS CLI which allows you to create a ZIP file with support for .gitignore files",
  "main": "dist/app.mjs",
  "bin": "dist/app.mjs",
  "type": "module",
  "scripts": {
    "lint": "npx tsc --noemit && npx eslint src test",
    "dev": "npx rollup -c -w",
    "prebuild": "rm -rf dist",
    "build": "npx rollup -c",
    "pretap": "npx tap build",
    "tap": "tap --node-arg='--no-warnings' --node-arg='--loader=tsx/esm' --disable-coverage --allow-empty-coverage",
    "pretest": "npm run lint && npx tap build",
    "test": "c8 -c .c8rc.json tap --node-arg='--no-warnings' --node-arg='--loader=tsx/esm' --disable-coverage --allow-empty-coverage test/*.test.ts test/**/*.test.ts",
    "prepack": "npm run build",
    "doc": "npx typedoc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matteosacchetto/node-zip-cli.git"
  },
  "homepage": "https://github.com/matteosacchetto/node-zip-cli#README.md",
  "bugs": {
    "url": "https://github.com/matteosacchetto/node-zip-cli/issues"
  },
  "author": "Matteo Sacchetto",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "cli",
    "zip"
  ],
  "devDependencies": {
    "@rollup/plugin-eslint": "^9.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-run": "^3.0.1",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/node": "^20.2.3",
    "@types/parse-gitignore": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "c8": "^8.0.1",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8",
    "rollup": "^3.23.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-node-externals": "^6.0.1",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "tap": "^18.6.1",
    "tsx": "^4.4.0",
    "typedoc": "^0.24.7",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.6.5"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^10.0.3",
    "@inquirer/confirm": "^2.0.15",
    "chalk": "^5.2.0",
    "commander": "^10.0.1",
    "figures": "^5.0.0",
    "ignore": "^5.2.4",
    "jszip": "^3.10.1",
    "ora": "^6.3.1",
    "parse-gitignore": "^2.0.0",
    "valid-filename": "^4.0.0"
  },
  "tap": {
    "plugin": [
      "!@tapjs/typescript"
    ]
  }
}
