{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "ignore": ["*.json"],
    "include": ["src/*.ts", "test/*.ts"],
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessConstructor": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "useTemplate": "off",
        "noUnusedTemplateLiteral": "off",
        "noUselessElse": "off",
        "noNonNullAssertion": "off",
        "useSingleVarDeclarator": "off",
        "useEnumInitializers": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "indentWidth": 2,
      "quoteStyle": "single",
      "trailingComma": "es5"
    }
  }
}
