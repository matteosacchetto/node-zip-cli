{
  "$schema": "https://biomejs.dev/schemas/1.6.2/schema.json",
  "files": {
    "include": [
      "src/*.ts",
      "test/*.ts",
      "scripts/*.mjs",
      "rollup.config.mjs",
      "rollup.plugins.mjs",
      "rollup.plugins.d.mts",
      "test.runner.mjs",
      "package.json",
      "tsconfig.json",
      "biome.json",
      ".c8rc.json"
    ]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["*.json"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessConstructor": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "useTemplate": "warn",
        "noUnusedTemplateLiteral": "warn",
        "noUselessElse": "warn",
        "noNonNullAssertion": "off",
        "useSingleVarDeclarator": "off",
        "useEnumInitializers": "warn",
        "useExportType": "error",
        "useImportType": "error",
        "useNodejsImportProtocol": "error",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "filenameCases": ["kebab-case"],
            "strictCase": false
          }
        },
        "useConsistentArrayType": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noInvalidUseBeforeDeclaration": "error",
        "noUnusedPrivateClassMembers": "warn"
      },
      "nursery": {
        "noUselessTernary": "error",
        "noExportsInTest": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "indentWidth": 2,
      "quoteStyle": "single",
      "trailingComma": "es5"
    }
  }
}
